# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.rulesPage()
GET     /game                       controllers.HomeController.game()

GET    /playerCount                 controllers.HomeController.setPlayerAmount(count: String)
GET    /playerName                  controllers.HomeController.setPlayerName(name: String)
GET    /tackAll                     controllers.HomeController.tackAllcards(ev: String)



GET    /change                      controllers.HomeController.changeOnCard(ev: String, handcard: Int, fieldcard: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
